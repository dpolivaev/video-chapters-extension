{
  "name": "video-chapters-generator-extension",
  "version": "1.1.0",
  "description": "Browser extension for generating AI-powered YouTube chapter timecodes",
  "author": "Dimitry Polivaev",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/dpolivaev/video-chapters-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/dpolivaev/video-chapters-extension.git"
  },
  "scripts": {
    "build:chrome": "node scripts/build.js --production",
    "build:firefox": "node scripts/build.js --firefox --production",
    "build": "npm run build:chrome && npm run build:firefox",
    "package:chrome": "node scripts/package.js --output dist/chrome",
    "package:firefox": "node scripts/package.js --output dist/firefox",
    "package": "npm run package:chrome && npm run package:firefox",
    "validate:chrome": "node scripts/validate.js --package --output dist/chrome",
    "validate:firefox": "node scripts/validate.js --package --output dist/firefox",
    "validate": "npm run validate:chrome && npm run validate:firefox",
    "test": "node scripts/test.js",
    "test:edge": "node scripts/test.js --edge",
    "test:performance": "node scripts/test.js --performance",
    "clean": "node scripts/clean.js",
    "generate-key": "node scripts/generate-key.js",
    "sign": "node scripts/sign.js",
    "dev": "node scripts/dev-server.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "archiver": "^6.0.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "eslint": "^8.57.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "jimp": "^0.22.10",
    "json5": "^2.2.3",
    "ora": "^5.4.1",
    "prettier": "^3.1.1",
    "semver": "^7.5.4",
    "sharp": "^0.33.2",
    "terser": "^5.26.0",
    "web-ext": "^7.9.0",
    "webextension-polyfill": "^0.12.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "youtube",
    "chapters",
    "browser-extension",
    "ai",
    "gemini",
    "subtitles",
    "timecodes",
    "chrome-extension",
    "edge-extension"
  ]
}
